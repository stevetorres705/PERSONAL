var BARD = ＂Bardiche +11 8*＂
?loc = deadwood & loc.stars > 3// works on 7*
  ?foe = boss 
    equip bar
    
    ?foe.state >= 32 
      Equipr co
      Equipl stone Hammer
    
  :?foe.distance >= 10 & foe ! immune_to_ranged
     Equip rep
  :?foe.count >= 3 | foe = immune_to_ranged
     Equip bard
:
  ?foe.state <= 0 
    Equipl ki
  :
    Equip tri
    

  ?foe = boss 
    equip bar
    
  :?foe.distance >= 10 & foe ! immune_to_ranged
     Equipr bow
  :?foe.count >= 3 | foe = immune_to_ranged
     Equipr stone hammer
//
?loc = caves // works on 7 *

  ?foe = boss
    Equipr co
    Equipl stone ha
  :?foe.distance < 10 | foe.count >= 4
    Equip bar
  :?foe.distance > 10 & foe.count <= 1
    Equip re

//
?loc = icy // works on 5*
  ?foe = boss
    ?foe.distance >= 10
      Equip das
    :?foe.armor >= 0 
      Equip bar
    : 
      Equipl vigor sw
      Equipr vigor sh
  :
    ?foe.distance > 10 
      Equip fire
    :?foe.count >= 3 | foe.distance <= 10
      Equip ba
//
?loc = mine // no idea
  ?foe.distance <= 10 | foe.count >= 4
    Equip bar
  :?foe = boss 
    equipl aether
    equipr aether wa
  :
    equip re
//
?loc = halls // works on 7* ???
  ?foe = Booo | foe = Big booo
    Equip vigor wa
  : 
