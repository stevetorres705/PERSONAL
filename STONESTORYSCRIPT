// VARABLIES GO HERE !!!
var heal = 10 
  
//
// FUNCS GO HERE 

// func to tell what weakness the foe has
func DisplayWeak(x)  
  ?x = aether & 
  ^ x = vigor & 
  ^ x = poison & 
  ^ x = ice &
  ^ x = fire 
    return ITS DYSAN JUMP HIM
  ?x = aether
    return vigor
  :?x = vigor
    return poison
  :?x = poison
    return ice
  :?x = ice 
    return fire
  :?x = fire 
    return aether
  :
    return none
//
func HEAL(h)
  ?hp = maxhp | heal > 1000
    heal = 10

  ?hp <= maxhp / 2 | h > 10
    heal++
    Equipl vigor sw
    Equipr vigor sh   
  
func DYSANPROT()
  
  
  ?foe = phase1 
    Equip bar
   
  :?foe = phase2
    ?foe = vigor 
      Equipl Poison Sword +1 6*
      Equipr vigor sh
    :?foe = poison 
      equipl Ice Sword +6 5*
      Equipr vigor sh
    :?foe = ice 
      Equipl Fire Wand +4 4*
      Equipr vigor sh
    :?foe = fire
      Equipl aether sword +2 6*
      Equipr vigor sh
    :?foe = aether 
      Equipl vigor sword +9 7*
      Equipr vigor sh  :?foe = phase3 
   
  ?foe = phase3 
    ?foe.state >= 115 
      // IM FIRING MAH LASER
      ?foe.state = 115 & foe.time = 50 
        Equipl mind 
        //WEAVE
      :?foe.state = 115 & foe.time > 50
        equip re
        //LAYOUT THAT MF
       
    :
      Equip bar
   


  HEAL(heal)
      
// 
